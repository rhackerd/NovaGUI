# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  core_config = debug
  app_config = debug

else ifeq ($(config),release)
  core_config = release
  app_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := core app

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

core:
ifneq (,$(core_config))
	@echo "==== Building core ($(core_config)) ===="
	@${MAKE} --no-print-directory -C . -f core.make config=$(core_config)
endif

app: core
ifneq (,$(app_config))
	@echo "==== Building app ($(app_config)) ===="
	@${MAKE} --no-print-directory -C . -f app.make config=$(app_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f core.make clean
	@${MAKE} --no-print-directory -C . -f app.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   core"
	@echo "   app"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"